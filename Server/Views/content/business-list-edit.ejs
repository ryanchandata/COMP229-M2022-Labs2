<div class="container">
    <h1>Business Contact List</h1>

    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Email</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="businessList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < business.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= business[count].Name %></td>
                            <td><%= business[count].Contact %></td>
                            <td><%= business[count].Email %></td>
                            <td><a href="/business-list/edit/<%= business[count]._id %>" class="btn btn-primary btn-sm bg-primary" type="button"><i class="fas fa-edit fa-sm"></i> Edit</a></td>
                            <td><a href="/business-list/delete/<%= business[count]._id %>" class="btn btn-primary btn-sm bg-danger confirm" type="button"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>