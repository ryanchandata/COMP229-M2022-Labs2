<div class="container">
    <h1>
        <%= title %>
    </h1>
    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="contactName">Contact Name</span>
            <input id="contactName" type="text" class="form-control" placeholder="Contact Name"
                aria-label="Contact Name" aria-describedby="Contact Name" name="Name"
                value="<%= business.Name%>" required>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="contactNumber">Contact Number</span>
            <input id="contactNumber" type="text" class="form-control" placeholder="Contact Number"
                aria-label="Contact Number" aria-describedby="Contact Number" name="Contact"
                value="<%= business.Contact%>" required>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="emailAddress">Email Address</span>
            <input id="emailAddress" type="text" class="form-control" placeholder="Email Address"
                aria-label="Email Address" aria-describedby="Email Address" name="Email"
                value="<%= business.Email%>" required>
        </div>
        <button type="submit" id="submitButton" class="btn btn-primary">
            <i class="fas fa-edit fa-lg"></i>Edit
        </button>

        <a href="/business-list" id="cancelButton" type="button" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
        <a href="/business-list/delete/<%= business._id %>" class="btn btn-primary bg-danger confirm" type="button"><i class="fas fa-trash-alt fa-sm"></i> Delete</a>

        
    </form>
</div>