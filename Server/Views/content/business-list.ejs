<div class="container">
    <h1>Movie List</h1>

    <div class="row">
        <div class="col">
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Email</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="businessList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < business.length; count++) { %>
                        <!-- Create a new Table Row-->
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= business[count].Name %></td>
                            <td><%= business[count].Year %></td>
                            <td><%= business[count].Director %></td>
                            <td></td>
                            <td></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>